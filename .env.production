# Production Configuration Template
# Copy this to .env for production deployment

# ============================================
# Application Environment
# ============================================
APP_ENV=production
DEBUG=false

# ============================================
# Data Configuration
# ============================================
DATA_PATH=data/customer_churn.csv
TARGET_COLUMN=Churn

# ============================================
# Model Configuration
# ============================================
MODEL_SAVE_PATH=models/best_model.pkl
PREPROCESSOR_SAVE_PATH=models/preprocessor.pkl
RANDOM_STATE=42

# ============================================
# Training Configuration
# ============================================
# Data splitting
TEST_SIZE=0.2
VAL_SIZE=0.1

# Preprocessing
SCALING_METHOD=standard
ENCODING_METHOD=onehot
HANDLE_IMBALANCE=false

# Model training
TUNE_HYPERPARAMETERS=true
SEARCH_METHOD=grid
CV_FOLDS=5

# ============================================
# Evaluation Configuration
# ============================================
CALCULATE_PERMUTATION_IMPORTANCE=true
CALCULATE_SHAP=false
SHAP_SAMPLE_SIZE=100

# ============================================
# Streamlit Server Configuration
# ============================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_DIR=logs

# ============================================
# Security Configuration (Production)
# ============================================
# Uncomment and configure for production
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SSL_ENABLED=true

# ============================================
# Database Configuration (Optional)
# ============================================
# Uncomment if using a database for results storage
# DATABASE_URL=postgresql://user:password@localhost:5432/churn_db
# DATABASE_POOL_SIZE=10

# ============================================
# Cloud Storage Configuration (Optional)
# ============================================
# AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# Azure Blob Storage
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_CONTAINER_NAME=your-container-name

# Google Cloud Storage
# GCS_PROJECT_ID=your-project-id
# GCS_BUCKET=your-bucket-name

# ============================================
# Monitoring Configuration (Optional)
# ============================================
# Sentry for error tracking
# SENTRY_DSN=your-sentry-dsn

# Application Insights
# APPINSIGHTS_INSTRUMENTATION_KEY=your-key

# ============================================
# Performance Configuration
# ============================================
MAX_UPLOAD_SIZE=200
CACHE_ENABLED=true
WORKERS=4
